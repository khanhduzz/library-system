@model LibrarySystem.Models.PaginationViewModel

<nav aria-label="Page navigation" class="mt-2">
    <ul class="pagination justify-content-center">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="@(Model.PageIndex - 1)" asp-route-searchString="@Model.SearchString">&laquo;</a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            if (Model.TotalPages <= 5 || (i >= Model.PageIndex - 1 && i <= Model.PageIndex + 1))
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-route-page="@i" asp-route-searchString="@Model.SearchString">@i</a>
                </li>
            }
        }

        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="@(Model.PageIndex + 1)" asp-route-searchString="@Model.SearchString">&raquo;</a>
            </li>
        }
    </ul>
</nav>
