@model LibrarySystem.Models.User

@{
    ViewData["Title"] = "Create User";
}

<div class="container mt-4 p-4 rounded shadow-sm" style="background-color: #f8f9fa;">
    <h1 class="mb-4">Create New User</h1>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter full name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter email address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" placeholder="Enter password" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UserName" class="form-label">Username</label>
            <input asp-for="UserName" class="form-control" placeholder="Enter username" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label class="form-label">Roles</label>
            <div class="ps-2">
                @foreach (var role in (List<LibrarySystem.Models.Role>)ViewBag.Roles)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="selectedRoles" value="@role.Id" id="role_@role.Id" />
                        <label class="form-check-label" for="role_@role.Id">@role.UserRole</label>
                    </div>
                }
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
