@model LibrarySystem.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-4 p-4 rounded shadow-sm" style="background-color: #f8f9fa;">
    <h1 class="mb-4">Book Details</h1>

    <div class="row" style="min-height: 400px;">
        <!-- Left Side: Book Info -->
        <div class="col-md-7 d-flex flex-column justify-content-between">
            <div>
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt class="col-sm-4">
                        Author
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Author?.Name
                    </dd>

                    <dt class="col-sm-4">
                        Genres
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.BookGenres.Any())
                        {
                            @foreach (var genre in Model.BookGenres)
                            {
                                <span>@genre.Genre.Name</span>
                                @if (!ReferenceEquals(genre, Model.BookGenres.Last()))
                                {
                                    <span>, </span> <!-- Add comma if it's not the last genre -->
                                }
                            }
                        }
                        else
                        {
                            <span class="text-muted">No genres available</span>
                        }
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.ISBN)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ISBN)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.PublishDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Model.PublishDate?.ToString("yyyy-MM-dd")
                    </dd>

                    <dt class="col-sm-4">
                        Available for Rent
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.IsAvailable ? "Yes" : "No")
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Condition)
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Condition.ToString()
                    </dd>

                    <dt class="col-sm-4">
                        Borrow Count
                    </dt>
                    <dd class="col-sm-8">
                        @Model.BorrowCount
                    </dd>
                </dl>
            </div>

            <!-- Buttons at the very bottom -->
            <div class="d-flex gap-2 pt-3">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>

        <!-- Right Side: Image Display -->
        <div class="col-md-5 d-flex align-items-center justify-content-center">
            @if (Model.Image != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)"
                     class="rounded shadow img-fluid"
                     style="height: 400px; width: auto;" />
            }
            else
            {
                <p class="text-muted">No image available</p>
            }
        </div>
    </div>
</div>
